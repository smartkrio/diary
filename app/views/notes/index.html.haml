.page-header
  %h1 Заметки
Найти за период:
%input.from.input-small.datepicker{'data-date-format' => "mm-dd-yyyy"}
\-
%input.to.input-small.form-controll.datepicker{'data-date-format' => "mm-dd-yyyy"}
= link_to 'Поиск', '#',:class => 'btn btn-success'
%table.table.table-striped
  %thead
    %tr
      %th #
      %th Название заметки
      %th Описание события
      %th Создана
      %th Действия
  %tbody
    - @notes.each do |note|
      %tr
        %td= link_to note.id, note_path(note)
        %td= note.title
        %td= note.event_description
        %td= l note.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_note_path(note), :class => 'btn btn-default btn-xs'

          = link_to t('.destroy', :default => t("helpers.links.destroy")), note_path(note), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_note_path,:class => 'btn btn-primary'
